(defrule encontrar-resfriado 
(enfermedad (nombre ?n) (signo1 congestion_nasal) (signo2 estornudos) (sintoma1 dolor_de_garganta) (sintoma2 tos))
=>
   (printout t "La enfermedad " ?n " ocacionan dolores de cabeza, gripe, congestion nasal y dolor de garganta." crlf))


(defrule encontrar-bocio_endemico 
(enfermedad (nombre ?n) (signo1 hinchazon_cuello) (signo2 tos) (sintoma1 ronquera) (sintoma2 fatiga))
=>
   (printout t "La enfermedad " ?n " ocacionan ronquera, fatiga, y se puede notar hinchazon en el cuello y tos." crlf))


(defrule encontrar-infeccion_urinaria 
(enfermedad (nombre ?n) (signo1 fiebre) (signo2 inflaacion_renal) (sintoma1 ardor) (sintoma2 sangre_orina))
=>
   (printout t "La enfermedad " ?n " ocacionan fiebre, inflacion renal y se puede notar ardor y sangre en la orina." crlf))

(defrule encontrar-diarrea
(enfermedad (nombre ?n) (signo1 deshidratacion) (signo2 inflamacionintestinal) (sintoma1 dolor) (sintoma2 ardor))
=>
   (printout t "La enfermedad " ?n " ocacionan deshidratacion, inflacion intestinal y se puede notar ardor y dolor." crlf))

(defrule encontrar-sindrome_premenstrual
(enfermedad (nombre ?n) (signo1 inflamacion) (signo2 miomas) (sintoma1 dolor_agudo) (sintoma2 colicos))
=>
   (printout t "La enfermedad " ?n " ocacionan inflamacion, miomas y se puede notar dolor agudo y colicos." crlf))
